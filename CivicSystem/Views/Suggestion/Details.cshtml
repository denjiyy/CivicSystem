@model CivicSystem.Web.Models.DetailsViewModel
@{
    ViewData["Title"] = "Suggestion Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-12">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
            <p class="card-text text-muted">Submitted by: @Model.UserId</p>
            <p class="card-text text-muted">Status: @Model.Status</p>
            <p class="card-text text-muted">Created On: @Model.CreatedOn</p>
            <hr />
        </div>

        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Suggestion" asp-action="All" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back to Suggestions</a>

                @if (User?.Identity?.IsAuthenticated == true && User?.Identity?.Name == @Model.UserId)
                {
                    <a asp-controller="Suggestion" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                    <a asp-controller="Suggestion" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this suggestion?');">Delete</a>
                }
            </div>
        </div>
    </div>
</div>
